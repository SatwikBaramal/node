<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Read Users</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Custom styles */
        .user-card {
            background-color: #F3F4F6; /* Light gray background */
            border: 2px solid #E5E7EB; /* Light border */
        }
        .user-card img {
            width: 100%; /* Full width image */
            height: 200px; /* Adjusted height */
            object-fit: cover; /* Maintain aspect ratio */
            border-radius: 8px; /* Rounded corners */
        }
    </style>
</head>
<body class="bg-black">
    <!-- Navigation Bar -->
    <div class="bg-gray-800 p-4">
        <nav class="flex justify-between items-center">
            <a href="/home" class="text-white text-lg">Home</a>
            <a href="/read" class="text-white text-lg">Read Users</a>
        </nav>
    </div>

    <!-- Users Display -->
    <div class="container mx-auto p-4">
        <div class="w-full text-center mb-8"> <!-- Centered heading -->
            <h2 class="text-3xl text-white">All Users</h2>
        </div>
        <div class="flex flex-wrap justify-center">
            <% users.forEach(function(val){ %>
                <div class="user-card bg-white m-4 p-4 rounded-lg shadow-lg w-64">
                    <img src="<%= val.Image %>" alt="User Image" class="w-full h-48 object-cover rounded-lg mb-4">
                    <h3 class="text-xl font-bold text-gray-800 mb-2"><%= val.name %></h3>
                    <p class="text-gray-600 mb-4"><%= val.email %></p>
                    <div class="flex justify-between">
                        <a href="/edit/<%= val._id %>" class="text-blue-500 hover:text-blue-700">Edit</a>
                        <a href="/delete/<%= val._id %>" class="text-red-500 hover:text-red-700">Delete</a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>

